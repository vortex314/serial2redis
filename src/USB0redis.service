; deployment config
; please adapt for your environment the ExecStart and Workingdirectory
[Unit]
Description=Wiring UDP to redis 
After=network.target
StartLimitIntervalSec=0
[Service]
Type=simple
Restart=always
RestartSec=5
User=root
Group=root
ExecStart=/home/lieven/workspace/serial2redis/build/serial2redis -f serial2redis.json
WorkingDirectory=/home/lieven/workspace/serial2redis/src

[Install]
WantedBy=multi-user.target
